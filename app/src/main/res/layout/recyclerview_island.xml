<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/card_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/island_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Island"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/government_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/government_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Government: "
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/ocean_location_text"
                app:layout_constraintEnd_toStartOf="@id/government_name_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/island_name" />

            <TextView
                android:id="@+id/government_name_placeholder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="government"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/ocean_location_placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/government_text"
                app:layout_constraintTop_toBottomOf="@id/island_name" />

            <TextView
                android:id="@+id/ocean_location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ocean: "
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/population_text"
                app:layout_constraintEnd_toStartOf="@id/ocean_location_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/government_text" />

            <TextView
                android:id="@+id/ocean_location_placeholder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ocean"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/population_placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ocean_location_text"
                app:layout_constraintTop_toBottomOf="@id/government_name_placeholder" />

            <TextView
                android:id="@+id/population_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Population: "
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/population_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ocean_location_text" />

            <TextView
                android:id="@+id/population_placeholder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="123"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/population_text"
                app:layout_constraintTop_toBottomOf="@id/ocean_location_placeholder" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>